<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_dialog"
    android:padding="20dp">

    <!--android:background="@drawable/bg_waiting_dialog"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_WaitingDialog_outside"
            android:layout_width="60dp"
            android:layout_centerInParent="true"
            android:layout_height="60dp"
            android:background="@mipmap/circle_wai" />

        <ImageView
            android:id="@+id/img_WaitingDialog_inside"
            android:layout_width="45dp"
            android:layout_centerInParent="true"
            android:layout_height="45dp"
            android:background="@mipmap/circle_nei" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_WaitingDialog"
        style="@style/tv_dialog"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="@string/waiting_loading" />


</LinearLayout>
