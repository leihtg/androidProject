        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/line" />


        <EditText
            android:id="@+id/edt_newProductPostDetail_count"
            style="@style/tradeOperate_edt_style_in"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_shape_gray_stroke_money"
            android:hint="@string/tradeOperate_in_amount"
            android:inputType="number"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btn_newProductPostDetail_askPost"
            style="@style/btn_style"
            android:layout_marginTop="10dp"
            android:background="@color/priceGaryColor"
            android:text="@string/newProductPostDetail_askPost" />


    </LinearLayout>


</ScrollView>
