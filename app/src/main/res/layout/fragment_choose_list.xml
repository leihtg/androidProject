<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootlayout_choose"
    android:background="@color/black">


    <include
        android:id="@+id/header_chooseList"
        layout="@layout/header_price_list"
        android:background="#f0f0f0" />

    <ListView
        android:id="@+id/listview_chooseList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/tv_priceList_devideLine"
        android:dividerHeight="0.3dp"></ListView>

    <Button
        android:id="@+id/btn_chooseList_addChoose"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/chooseList_addChoose"
        android:textColor="@color/priceRedColor"
        android:textSize="20dp"
        android:background="@drawable/btn_shape_dash_price"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp" />


</LinearLayout>
