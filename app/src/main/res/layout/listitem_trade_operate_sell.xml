<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <TextView
        android:id="@+id/tv_tradeOperate_listitem_sell_sellKind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/tv_stock_btn"
        android:text="卖五"
        android:textSize="@dimen/tv_deputeList_size"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_tradeOperate_listitem_sell_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/priceRedColor"
        android:text="5.98"
        android:textSize="10sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_tradeOperate_listitem_sell_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:text="11025"
        android:textSize="10sp"
        android:gravity="center" />

</LinearLayout>
