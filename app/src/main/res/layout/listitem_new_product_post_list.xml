<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_newProductPostList_listitem_name"
        style="@style/tv_list_content"
        android:text="--" />

    <TextView
        android:id="@+id/tv_newProductPostList_listitem_price"
        style="@style/tv_list_bigContent"
        android:textColor="@color/priceRedColor"
        android:text="--" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_newProductPostList_listitem_startTime"
            style="@style/tv_notice_list_time"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="--" />

        <TextView
            android:id="@+id/tv_newProductPostList_listitem_endTime"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            style="@style/tv_notice_list_time"
            android:text="--"

            />

    </LinearLayout>


</LinearLayout>