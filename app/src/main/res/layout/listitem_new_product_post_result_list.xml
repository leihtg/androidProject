<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_name"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="河南省 洛阳市" />


        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_code"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="15-05-03 11:50"
            android:textColor="@color/priceGaryColor"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_successCount"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:textColor="@color/priceRedColor"
            android:text="河南省 洛阳市" />


        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_count"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="15-05-03 11:50"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_successMoney"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:textColor="@color/priceRedColor"
            android:text="河南省 洛阳市" />


        <TextView
            android:id="@+id/tv_newProductPostResultList_listitem_money"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="15-05-03 11:50"

            />

    </LinearLayout>


</LinearLayout>