<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarHead"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorActionBar">

        <TextView
            android:id="@+id/tv_nav_accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/nav_loginOrRegister"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_nav_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_loginOrRegister"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_userMoneyOrAccount"
            android:textSize="16sp"
            android:textColor="@color/lightGray" />

        <TextView
            android:id="@+id/tv_nav_userAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="25sp"
            android:textColor="@color/priceRedColor"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/tv_nav_userScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:textColor="@color/priceRedColor"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
