<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trade_datail_listitem_name"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="河南省 洛阳市" />

        <TextView
            android:id="@+id/tv_trade_datail_listitem_time_day"
            style="@style/tv_list_time"
            android:layout_width="wrap_content"
            android:text="15-05-03 11:50"

            />

        <TextView
            android:id="@+id/tv_trade_datail_listitem_time"
            android:layout_width="wrap_content"
            style="@style/tv_list_time"
            android:text="15-05-03 11:50"


            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_trade_datail_listitem_tradePrice"
        style="@style/tv_list_bigContent"
        android:text="登录成功" />

    <TextView
        android:id="@+id/tv_trade_datail_listitem_tradeAmount"
        style="@style/tv_list_content"
        android:text="10.12.10.00"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trade_datail_listitem_tradeMoney"
            android:layout_width="wrap_content"
            style="@style/tv_list_content"
            android:text="河南省 洛阳市" />

        <TextView
            android:id="@+id/tv_trade_datail_listitem_type"
            android:layout_width="wrap_content"
            android:text="15-05-03 11:50"
            style="@style/tv_list_content"

            />

    </LinearLayout>


</LinearLayout>