<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <dianshi.matchtrader.view.CircleImageView
                android:id="@+id/img_login_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                app:border_width="2dp"
                app:border_color="@color/white"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/bg_login_edt"
                android:padding="15dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="@dimen/img_login"
                    android:layout_height="@dimen/img_login"
                    android:src="@mipmap/username" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/edt_login_username"
                    style="@style/login_edt_style"
                    android:hint="@string/login_inputUsername"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/bg_login_edt"
                android:padding="15dp"
                android:layout_marginTop="15dp">

                <CheckBox
                    android:id="@+id/checkbox_login_password"
                    android:layout_width="@dimen/img_login"
                    android:layout_height="@dimen/img_login"
                    android:button="@drawable/checkbox_selector_password"
                    android:padding="15dp"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="@dimen/img_login"
                    android:layout_height="@dimen/img_login"
                    android:src="@mipmap/password" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/edt_login_password"
                    style="@style/login_edt_style"
                    android:hint="@string/login_inputPassword"
                    android:inputType="textPassword" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/checkbox_login_rememberUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector_remember_username"
                    android:layout_centerVertical="true"
                    android:background="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_rememberPassword"
                    android:textColor="@color/tv_dialog"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/checkbox_login_rememberUsername"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/tv_login_forgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_forgetPassword"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_login_login"
                style="@style/btn_style"
                android:text="@string/login_login"
                android:background="@color/priceRedColor"
                android:layout_marginTop="20dp"
                android:padding="15dp" />

            <Button
                android:id="@+id/btn_login_register"
                style="@style/btn_style"
                android:text="@string/login_register"
                android:background="@color/blue"
                android:layout_marginTop="15dp"
                android:padding="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
